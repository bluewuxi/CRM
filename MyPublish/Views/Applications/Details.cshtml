@model CRM.Domain.Entities.Application

@{
    ViewData["Title"] = "Application Details";
}
@section SideBar {
    <li class="sidebar-info">
        <div class="panel panel-primary" style="margin:5px;">
            <div class="panel-heading">
                <span class="h4"><i class="fa fa-info-circle fa-fw" aria-hidden="true"></i> Message</span>
            </div>
            <div class="panel-body">
                <div class="col-sm-12" style="margin-left:-10px;">
                    <h5>Student: <a href="/Students/Details/@Model.StudentID">@Model.Student.Name</a></h5>
                    <hr style="margin: 10px 10px 10px -10px;">
                    <h5>Institute: <a href="/Accounts/Details/@Model.InstituteID">@Model.Institute.ShortName</a></h5>
                    <hr style="margin: 10px 10px 10px -10px;">
                    <h5><span>Agent: <a href="/Accounts/Details/@Model.ApplicationAgentID">@Model.ApplicationAgent.ShortName</a></span></h5>
                    <hr style="margin: 10px 10px 10px -10px;">
                </div>
                <vc:record-info created-by="@Model.CreatedBy" modified-by="@Model.ModifiedBy"
                                created-time="@Model.CreatedTime" modified-time="@Model.ModifiedTime">
                </vc:record-info>
            </div>
        </div>
    </li>
}


<div class="panel panel-info" style="margin:5px;">
    <div class="panel-heading">
        <form id="confirmForm" asp-action="Delete" asp-route-id="@Model.ApplicationID">
            <div class="btn-group pull-right">
                <a style="margin-left:10px;margin-right:10px;" class="btn btn-sm btn-success" asp-action="Edit" asp-route-id="@Model.ApplicationID"><i class="fa fa-fw fa-pencil"></i>Edit</a>
                <a asp-action="Index" class="btn btn-sm btn-info"><i class="fa fa-fw fa-reply"></i>Back to List</a>
                <a id="deleteButton" href="#" onclick="deleteApplication()" class="btn btn-sm btn-danger" style="margin-left:10px;"><i class="fa fa-fw fa-remove"></i>Delete</a>
            </div>
            <p style="font-size:18px; margin-top:0px; margin-bottom:0px;">@ViewData["Title"]</p>
        </form>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6 crm-style">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Student)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Student.Name)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Status)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.InstituteID)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Institute.Name)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.SubmittedDate)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.SubmittedDate)
                    </dd>
                </dl>
            </div>
            <div class="col-md-6 crm-style">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.ApplicationAgentID)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ApplicationAgent.Name)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Tuition)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Tuition)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Note)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Note)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $("#crm-applications").addClass('active');
        function deleteVisa() {
            if (confirm("Are you sure to delete the Application?")) {
                $("#confirmForm").submit();
            }
        };
    </script>
}