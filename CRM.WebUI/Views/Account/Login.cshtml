@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using CRM.Domain.Entities
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Login"; Layout = "_blankLayout";
}
        <div class="container">
            <div class="row">
                <div class="col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-4">
                    <div class="login-panel panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Please Sign In</h3>
                        </div>
                        <div class="panel-body">
                            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <fieldset>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon" ><i class="fa fa-user fa-fw"></i></span>
                                            <input asp-for="UserName" class="form-control" placeholder="User Name" autofocus>
                                        </div>
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon" ><i class="fa fa-key fa-fw"></i></span>
                                            <input asp-for="Password" class="form-control" placeholder="Password" type="password">
                                        </div>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="checkbox">
                                        <label asp-for="RememberMe">
                                            <input asp-for="RememberMe" />
                                            @Html.DisplayNameFor(m => m.RememberMe)
                                        </label>
                                    </div>

                                    <button type="submit" class="btn btn-lg btn-success btn-block"><i class="fa fa-sign-in fa-fw"></i>Log in</button>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                    <div class="alert alert-warning">User: admin, Password: 123456 <br>Please DO NOT change password.</div>
                </div>
            </div>
        </div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


