@using CRM.Domain.Entities
@using CRM.Domain.Abstract
@model CRM.Domain.Entities.Account

@{
    ViewData["Title"] = "Create New Account";
}
<br/>
<form asp-action="Create" autocomplete="off">
    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="btn-group pull-right form-inline">
                &nbsp;<a type="button" class="btn btn-info" href='/Accounts' style="float: right;"><i class="fa fa-fw fa-reply"></i>Back to List</a>&nbsp;
                <button type="submit" value="Create" class="btn btn-success " stype="margin-left: 15px"><i class="fa fa-fw fa-save"></i>Save</button>
            </div>
            <h4>@ViewData["Title"]</h4>
        </div>
        <div class="panel-body">
            <input type="hidden" asp-for="AccountID" />
            @{await Html.RenderPartialAsync("_AccountsPartial", Model, ViewData);}
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $("#crm-accounts").addClass('active');
        $('.datepicker-here').datepicker({ clearButton: true });
    </script>
}
