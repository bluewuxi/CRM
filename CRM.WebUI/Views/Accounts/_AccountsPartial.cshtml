@using CRM.Domain.Entities
@using CRM.Domain.Abstract
@model CRM.Domain.Entities.Account

<div asp-validation-summary="ModelOnly" class="text-danger "></div>
<div class="row crm-style" >
    <div class="col-md-5">
        <div class="form-horizontal" autocomplete="off">
            <div class="form-group">
                <label asp-for="Name" class="col-md-4 col-lg-4 control-label"></label>
                <div class="col-md-8 col-lg-8 ">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ShortName" class="col-md-4 col-lg-4 control-label"></label>
                <div class="col-md-8 col-lg-8 ">
                    <input asp-for="ShortName" class="form-control" />
                    <span asp-validation-for="ShortName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="AccountType" class="col-md-4 col-lg-4 control-label"></label>
                <div class="col-md-8 col-lg-8 ">
                    <select asp-for="AccountType" class="form-control" asp-items="Html.GetEnumSelectList<Account.AccountTypeEnum>()"></select>
                    <span asp-validation-for="AccountType" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ContactName" class="col-md-4 col-lg-4 control-label"></label>
                <div class="col-md-8 col-lg-8 ">
                    <input asp-for="ContactName" class="form-control" />
                    <span asp-validation-for="ContactName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ContactGender" class="col-md-4 col-lg-4 control-label"></label>
                <div class="col-md-8 col-lg-8 ">
                    <select asp-for="ContactGender" class="form-control" asp-items="Html.GetEnumSelectList<GenderEnum>()"></select>
                    <span asp-validation-for="ContactGender" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Birthdate" class="col-md-4 col-lg-4 control-label"></label>
                <div class="col-md-8 col-lg-8 ">
                    <input asp-for="Birthdate" class="form-control datepicker-here" placeholder="Date of Birth"
                          data-date-format="yyyy-mm-dd" data-clearButton="true" data-autoClose="true" data-language="en" />
                    <span asp-validation-for="Birthdate" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-5 col-md-offset-1">
        <div class="form-horizontal">
            <div class="form-group">
                <label asp-for="EMail" class="col-md-4 col-lg-4 control-label"></label>
                <div class="col-md-8 col-lg-8 ">
                    <input asp-for="EMail" class="form-control" />
                    <span asp-validation-for="EMail" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Mobile" class="col-md-4 col-lg-4 control-label"></label>
                <div class="col-md-8 col-lg-8 ">
                    <input asp-for="Mobile" class="form-control" />
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="RegisterDate" class="col-md-4 col-lg-4 control-label "></label>
                <div class="col-md-8 col-lg-8 ">
                    <input asp-for="RegisterDate" class="form-control datepicker-here" placeholder="Date of Register"
                          data-date-format="yyyy-mm-dd" data-clearButton="true" data-autoClose="true" data-language="en" />
                    <span asp-validation-for="RegisterDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="col-md-4 col-lg-4 control-label"></label>
                <div class="col-md-8 col-lg-8 ">
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="col-md-4 col-lg-4 control-label"></label>
                <div class="col-md-8 col-lg-8 ">
                    <input asp-for="Note" class="form-control" />
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="AccountOwner" class="col-md-4 col-lg-4 control-label"></label>
                <div class="col-md-8 col-lg-8 ">
                    <select asp-for="AccountOwnerID" class="form-control" asp-items="@((SelectList)ViewData["UserList"])">
                        <option value="">select one user</option>
                    </select>

                    <span asp-validation-for="AccountOwner" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</div>

